 public class Lab1 {

  // Returns the maximum of two integers
  public static int max(int a, int b) {
      if (a > b) {
          return a;
      } else {
          return b;
      }
  }

  // Returns the minimum of two integers
  public static int min(int a, int b) {
      if (a < b) {
          return a;
      } else {
          return b;
      }
  }

  // Returns the sum of all elements in an array
  public static int sum(int[] nums) {
      int total = 0;
      for (int num : nums) {
          total += num;
      }
      return total;
  }

  // Returns the average of all elements in an array
  public static double average(int[] nums) {
      int total = 0;
      for (int num : nums) {
          total += num;
      }
      return (double) total / nums.length;
  }

  // Returns the maximum value in an array
  public static int max(int[] nums) {
      int maxVal = nums[0];
      for (int i = 1; i < nums.length; i++) {
          if (nums[i] > maxVal) {
              maxVal = nums[i];
          }
      }
      return maxVal;
  }

  // Returns the minimum value in an array
  public static int min(int[] nums) {
      int minVal = nums[0];
      for (int i = 1; i < nums.length; i++) {
          if (nums[i] < minVal) {
              minVal = nums[i];
          }
      }
      return minVal;
  }

  // Main method
  public static void main(String[] args) {
      int[] nums = {5, 9, 3, 12, 7, 3, 11, 5};

      // Output the array in order using a while loop
      System.out.print("Array in order: ");
      int i = 0;
      while (i < nums.length) {
          System.out.print(nums[i] + " ");
          i++;
      }
      System.out.println();

      // Output the array in reverse using a for loop
      System.out.print("Array in reverse: ");
      for (int j = nums.length - 1; j >= 0; j--) {
          System.out.print(nums[j] + " ");
      }
      System.out.println();

      // Output the first and last values of the array
      System.out.println("First value: " + nums[0]);
      System.out.println("Last value: " + nums[nums.length - 1]);

      // Call the methods created in Lab1
      System.out.println("Max of 7 and 12: " + max(7, 12));
      System.out.println("Min of 7 and 12: " + min(7, 12));
      System.out.println("Sum of array: " + sum(nums));
      System.out.println("Average of array: " + average(nums));
      System.out.println("Max in array: " + max(nums));
      System.out.println("Min in array: " + min(nums));
  }
}
